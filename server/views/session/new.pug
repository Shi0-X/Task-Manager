extends ../layouts/application.pug

block content
  h1.my-4= t('views.session.new.signIn')

  form(action=route('session') method='post')
    .mb-3
      label(for="data_email")= t('views.user.email')
      input(
        id="data_email"
        name="data[email]"
        class="form-control"
        type="email"
        value=signInForm && signInForm.email ? signInForm.email : ''
      )
      if errors && errors.email
        .invalid-feedback.d-block= errors.email[0].message
        
    .mb-3
      label(for="data_password")= t('views.user.password')
      input(
        id="data_password"
        name="data[password]"
        class="form-control"
        type="password"
      )
      
    button.btn.btn-primary.mt-3(type="submit")= t('views.session.new.submit')