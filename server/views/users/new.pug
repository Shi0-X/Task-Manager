extends ../layouts/application.pug

block content
  h1.my-4= t('views.user.new.signUp')

  +formFor()(action=route('users') method='post')
    .mb-3
      label(for="data_firstName")= t('views.user.firstName')
      input(
        id="data_firstName"
        name="data[firstName]"
        class="form-control"
        type="text"
        value=user.firstName || ''
        placeholder=t('views.user.firstName')
      )
      if errors && errors.firstName
        .invalid-feedback.d-block= errors.firstName[0].message
    
    .mb-3
      label(for="data_lastName")= t('views.user.lastName')
      input(
        id="data_lastName"
        name="data[lastName]"
        class="form-control"
        type="text"
        value=user.lastName || ''
        placeholder=t('views.user.lastName')
      )
      if errors && errors.lastName
        .invalid-feedback.d-block= errors.lastName[0].message
    
    .mb-3
      label(for="data_email")= t('views.user.email')
      input(
        id="data_email"
        name="data[email]"
        class="form-control"
        type="email"
        value=user.email || ''
        placeholder=t('views.user.email')
      )
      if errors && errors.email
        .invalid-feedback.d-block= errors.email[0].message
    
    .mb-3
      label(for="data_password")= t('views.user.password')
      input(
        id="data_password"
        name="data[password]"
        class="form-control"
        type="password"
        placeholder=t('views.user.password')
      )
      if errors && errors.password
        .invalid-feedback.d-block= errors.password[0].message
    
    button.btn.btn-primary(type="submit")= t('views.user.new.submit')